extends layout

append head
  title Reality Builder Administration
  link(rel='stylesheet', href='/stylesheets/admin.css')

append bottomBar
  #bottomBar
    #positionAndAngleDisplay
      | x&nbsp;=&nbsp;
      span#newBlockXB 0
      |, y&nbsp;=&nbsp;
      span#newBlockYB 0
      |, z&nbsp;=&nbsp;
      span#newBlockZB 0
      |, a&nbsp;=&nbsp;
      span#newBlockA 0
    button#realBlocksVisibilityButton(type='button')
    button#pendingBlocksVisibilityButton(type='button')
    button#logOutButton(type='button') Log Out

append sideBar
  #sideBar
    h2.first Settings
    fieldset#cameraSettings
      legend Camera
      ul.first
        li
          input#cameraXTextField(type='text')
          label(for='cameraXTextField') mm = x
        li
          input#cameraYTextField(type='text')
          label(for='cameraYTextField') mm = y
        li
          input#cameraZTextField(type='text')
          label(for='cameraZTextField') mm = z
        li
          input#cameraFlTextField(type='text')
          label(for='cameraFlTextField') mm = Focal Length
      ul
        li
          input#cameraAXTextField(type='text')
          label(for='cameraAXTextField') rad = x Rot.
        li
          input#cameraAYTextField(type='text')
          label(for='cameraAYTextField') rad = y Rot.
        li
          input#cameraAZTextField(type='text')
          label(for='cameraAZTextField') rad = z Rot.
        li
          input#cameraSensorResolutionTextField(type='text')
          label(for='cameraSensorResolutionTextField') px/mm = Sensor Resol.
    button#saveSettingsButton(type='button') Save Settings
    button#previewCameraButton(type='button') Preview Camera
    #prerenderedBlockConfigurations
      h2 Prerendered Block Configurations
      input#prerenderedBlockConfigurationTextField(type='text')
      button#setPrerenderedBlockConfigurationButton(type='button') Set
      button#prevPrerenderedBlockConfigurationButton(type='button') &lt;
      button#nextPrerenderedBlockConfigurationButton(type='button') &gt;
    h2 Blocks
    .scrollPane
      table#blocksTable
        thead
          tr
            th.number x
            th.number y
            th.number z
            th.number a
            th Created
            th State
            th
        tbody

append scripts
  script(src='/javascripts/admin.js')
