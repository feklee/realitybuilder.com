html, body {
    background: white;
}

input {
    cursor: text;
}

button, input, select {
    font-size: 10px;
}

button {
    height: 19px;
    padding: 0 3px;
}

table#contentContainer td {
    vertical-align: top;
}

#view {
    float: left;
    margin: 10px;
}

#imageSettings button {
    width: 62px;
}

#imageUrlTextField {
    width: 248px;
}

#sideBar {
    min-width: 310px;
    padding: 10px 10px 0 0;
    text-align: left;
}

#sideBar h2 {
    font-size: 14px;
    font-weight: bold;
    margin: 20px 0 5px 0;
}

#sideBar h2.first {
    margin-top: 0; /* otherwise a vertical scrollbar will appear in Fx 3.5 */
}

#sideBar ul {
    list-style: none;
}

#sideBar fieldset {
    margin: 5px 0 5px 2px;
    padding: 5px;
    border: 1px solid gray;
}

#sideBar fieldset legend {
    padding: 0 3px;
}

#sideBar label {
    white-space: nowrap;
}

#cameraSettings ul.first {
    float: left;
    margin-right: 10px;
}

#cameraSettings button {
    width: 62px;
}

#cameraSettings input {
    width: 40px;
    margin-bottom: 2px;
    text-align: right;
}

#saveSettingsButton, #previewCameraButton {
    margin-right: 5px;
}

#prerenderedBlockConfigurations>button {
  margin-left: 5px;
}

#prerenderedBlockConfigurationTextField {
    width: 40px;
    margin-bottom: 2px;
    text-align: right;
}

#sideBar .scrollPane {
    overflow: auto;
    height: 195px;
    padding-right: 20px; /* for the scroll bar */
    border: 1px solid gray;
}

table#blocksTable {
    width: 100%;
}

table#blocksTable th, table#blocksTable td {
    padding: 0 5px;
}

table#blocksTable th {
    font-weight: normal;
}

table#blocksTable th, table#blocksTable td {
    width: auto;
    text-align: left;
    white-space: nowrap;
}

table#blocksTable th.number, table#blocksTable td.number {
    text-align: right;
}

table#blocksTable td select {
    width: 7.5em;
}

#bottomBar {
    clear: both;
    float: left;
    margin: 0 10px;
    text-align: left;
    width: 640px;
}

#logOutButton {
    float: right;
}

#toggleRealButton, #togglePendingButton {
    width: 12em;
    margin-right: 10px;
    float: left;
}

#positionAndAngleDisplay {
    display: inline-block;
    width: 13em;
    height: 17px;
    border: 1px solid gray; 
    margin-right: 10px;
    padding: 0 3px;
    float: left;
}

#realBlocksVisibilityButton {
  margin-right: 10px;
}

#loadIndicator {
    color: black;
}
